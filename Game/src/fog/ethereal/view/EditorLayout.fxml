<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root prefHeight="608.0" prefWidth="1080.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fog.ethereal.view.EditorController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Save">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Save and Exit" />
                        <MenuItem mnemonicParsing="false" text="Save As..." />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Exit">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <Menu mnemonicParsing="false" text="Edit Mode">
                           <items>
                              <RadioMenuItem mnemonicParsing="false" onAction="#setAdd" text="Add">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="modes" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <RadioMenuItem mnemonicParsing="false" onAction="#setMove" text="Move" toggleGroup="$modes" />
                           </items>
                        </Menu>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
              </menus>
               <padding>
                  <Insets bottom="-1.0" top="-2.0" />
               </padding>
            </MenuBar>
         </top>
         <center>
            <ScrollPane prefHeight="691.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <contextMenu>
                  <ContextMenu fx:id="addPopup" onAction="#updatePopupPos">
                    <items>
                      <MenuItem fx:id="addPlatform" mnemonicParsing="false" onAction="#addPlatform" text="Add Platform" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </ScrollPane>
         </center>
      </BorderPane>
   </children>
</fx:root>
